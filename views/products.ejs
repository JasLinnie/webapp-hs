    <div class="subscribeform">
      <form action="/subscribe" method="post">
        <label>Name:</label>
        <input type="text" name="firstname">
        <label>Email:</label>
        <input type="text" name="email">
        <input type="submit" value="Subscribe!">
      </form>
    </div>
    <%- include('includes/footer'); %>
  </body>
</html>
